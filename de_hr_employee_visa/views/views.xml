<odoo>
  <data>

	  <!-- form view -->
	  <record id="hr_employee_form_view_test" model="ir.ui.view">
			<field name="name">hr.employee.form.inherit</field>
			<field name="model">hr.employee</field>
              <field name="inherit_id" ref="hr.view_employee_form"/>
			<field name="arch" type="xml">
				<xpath expr="//page[@name='hr_settings']" position='after'>
				 <page string="Passport and Visa">
					 <group>
						 <group>
							 <field name="passport_number"/>
							 <field name="passport_issue_date"/>
							 <field name="passport_expiry_date"/>
					     </group>
						 <group>
							 <field name="passport_country"/>
							 <field name="other_nationality" widget="many2many_tags"/>
					     </group>
					 </group>
				 </page>
                </xpath>
            </field>
     </record>
		<!--	tree view  -->
	  <record model='ir.ui.view' id='visa_tree_view'>
            <field name="name">visa.tree.view</field>
            <field name="model">visa.card.details</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="description"/>
                    <field name="visa_Type"/>
                    <field name="Visa_issuance_Date"/>
                    <field name="Visa_Expiration_Date"/>
                    <field name="Visa_country"/>
                    <field name="no_of_entries"/>
                    <field name="status"/>
                </tree>
            </field>
      </record>

      <record model='ir.ui.view' id='visa_form_view'>
            <field name="name">visa.form.view</field>
            <field name="model">visa.card.details</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="to_request" type="object" string="Request"  class="oe_highlight"
                                    states="to_request"
                            />
                        <button name="approve_action" type="object" string="Approve"  class="oe_highlight"
                                    states="in_process"
                            />
                        <button name="reject_action" type="object" string="Reject"  class="oe_highlight"
                                    states="in_process"
                            />
                        <button name="expired_action" type="object" string="Expired"  class="oe_highlight"
                                    states="approve"
                            />
                        <field name="state" widget="statusbar"
                               statusbar_visible="to_request,
                                in_process,
                                approve,
                                reject,
                                expired"
                        />
                    </header>
                    <sheet>
                        <h1><field name="description"/></h1>
                        <group>
                            <group>
                                <field name="employee_id"/>
                                <field name="visa_Type" options="{'no_create': True , 'no_edit': True}"/>
                                <field name="Visa_issuance_Date"/>
                                <field name="Visa_Expiration_Date"/>
                            </group>
                            <group>
                                <field name="Visa_country"/>
                                <field name="no_of_entries"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
		<!--	search view  -->
	  <record model='ir.ui.view' id='visa_detail_search_view'>
        <field name="name">visa.detail.search.view</field>
        <field name="model">visa.card.details</field>
        <field name="arch" type="xml">
            <search string="Custody">
                <field name="description"/>
                <field name="visa_Type"/>
                <field name="Visa_issuance_Date"/>
                <field name="Visa_Expiration_Date"/>
                <field name="Visa_country"/>
                <field name="no_of_entries"/>
                <field name="status"/>
            </search>
        </field>
    </record>



      <record model='ir.ui.view' id='visa_type_form_view'>
        <field name="name">visa.type.form.view</field>
        <field name="model">visa.card.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                    <group>
                        <field name="name"/>
                    </group>
                </group>
                </sheet>
            </form>
        </field>
      </record>

      <record model='ir.ui.view' id='visa_type_tree_view'>
        <field name="name">visa.card.type.tree</field>
        <field name="model">visa.card.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
      </record>

      <record model='ir.ui.view' id='visa_type_search_view'>
        <field name="name">visa.type.search.view</field>
        <field name="model">visa.card.type</field>
        <field name="arch" type="xml">
            <search string="Visa type">
                <field name="name"/>
            </search>
        </field>
      </record>



      <record id="visa_type_menu_action" model="ir.actions.act_window">
        <field name="name">Visa Type</field>
        <field name="res_model">visa.card.type</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="visa_type_search_view"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a New Visa Type.
            </p>
        </field>
    </record>

	  <record id="visa_menu_action" model="ir.actions.act_window">
        <field name="name">Visa Details</field>
        <field name="res_model">visa.card.details</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="visa_detail_search_view"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a Visa detail.
            </p>
        </field>
    </record>


	  <menuitem id="visa_menu_root"
              name="Visa Details"
              parent="hr.menu_hr_root"
              sequence="3"
			  />

      <menuitem id="visa_menu_root_sub"
              name="Visa Detail"
              parent="visa_menu_root"
              sequence="1"
			  action="visa_menu_action"/>

      <menuitem id="visa_type_menu_root"
              name="Visa Type"
              parent="visa_menu_root"
              sequence="2"
			  action="visa_type_menu_action"/>

  </data>
</odoo>