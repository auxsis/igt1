<odoo>   <data>		<record id="view_exit_request_form" model="ir.ui.view">			<field name="name">hr.employee.exit.resignation.form</field>			<field name="model">hr.employee.exit.resignation</field>			<field name="arch" type="xml">				<form string="hr resignation">					<header>
                       <field name="state" widget="statusbar" statusbar_visible="draft,confirm,approved_manager.approved_hr_manager,approved_general_manager,done"/>						<button name="action_browse" type="object" string="Confirm"  class="oe_highlight"								states="draft"/>						<button name="approved_by_dept_manager" type="object" string="Approved by Dept Manager"  class="oe_highlight"								states="confirm"								groups="openhcm_employee_exit_resignation.dept_manager_access"						/>						<button name="approved_by_hr_manager" type="object" string="Approved by Hr Manager"  class="oe_highlight"								states="approved_manager"								groups="openhcm_employee_exit_resignation.hr_manager_access"						/>						<button name="approve_by_general_manager" type="object" string="Approved by General Manager"  class="oe_highlight"								states="approved_hr_manager"								groups="openhcm_employee_exit_resignation.general_manager_access"						/>						<button name= "done_action"								type="object"								string="Done"
                                states = "approved_general_manager"								class="oe_highlight"								state="approved_general_manager"						/>
                        					</header>					<sheet>                    <div class="oe_title">                      <h1>                          <field name="name" placeholder="Employee's Name"  attrs="{'readonly':[('state','!=', 'draft')]}"/>                      </h1><!--						<div name="button_box" class="oe_right oe_button_box">--><!--							<button  type="object"  icon="fa-user">--><!--								<field string="Start Interview" name="start_interview" widget="statinfo"/>--><!--							</button>--><!--							<button  type="object"  icon="fa-printer">--><!--								<field string="Print Interview" name="print_Interview" widget="statinfo"/>--><!--							</button>--><!--							<button  type="object"  icon="fa-calender">--><!--								<field string="Meeting" name="meeting" widget="statinfo"/>--><!--							</button>--><!--						</div>-->					</div>                    <group>							<group>								<field name="request_Date" attrs="{'readonly':[('state','!=', 'draft')]}"/>								<field name="last_day_of_work" attrs="{'readonly':[('state','!=', 'draft')]}" />                                <field name="contact" />							</group>                            <group>                                <field name="department_id" attrs="{'readonly':[('state','!=', 'draft')]}"/>                                <field name="job_id" attrs="{'readonly':[('state','!=', 'draft')]}"/>                                <field name="parent_id" attrs="{'readonly':[('state','!=', 'draft')]}"/>                                <field name="user_id" attrs="{'readonly':[('state','!=', 'draft')]}"/>                                <field name="interview_id" attrs="{'readonly':[('state','!=', 'draft')]}"/>                            </group>                    </group>                    <group>                        <group>                            <field name="Confirm_by" attrs="{'readonly':[('state','!=', 'draft')]}"/>							<field name="confirm_date" attrs="{'readonly':[('state','!=', 'draft')]}"/>                            <field name="Department_manager" attrs="{'readonly':[('state','!=', 'draft')]}"/>							<field name="department_manager_approve_date" attrs="{'readonly':[('state','!=', 'draft')]}"/>                        </group>                        <group>                            <field name="Hr_manager" attrs="{'readonly':[('state','!=', 'draft')]}"/>                            <field name="hr_manger_approved_date" attrs="{'readonly':[('state','!=', 'draft')]}"/>							<field name="General_manager" attrs="{'readonly':[('state','!=', 'draft')]}"/>                            <field name="general_manager_approved_date" attrs="{'readonly':[('state','!=', 'draft')]}"/>                        </group>                    </group>                    <notebook>							<page string ='Information'>								<field name = 'employ_information' attrs="{'readonly':[('state','!=', 'draft')]}">								<tree editable="bottom">									<field name="Check_list" />									<field name="Responsible_User" />									<field name="Remarks"/><!-- 									<field name="State"/> -->									<field name="resignation_id" invisible = '1'/>								</tree>											</field>							</page>                            <page string ='Contact'>
								<form>
									<group>
										<group>
											<field name="work_mobile" attrs="{'readonly':[('state','!=', 'draft')]}"/>
											<field name="work_email" attrs="{'readonly':[('state','!=', 'draft')]}"/>
										</group>
										<group>
											<field name="address" attrs="{'readonly':[('state','!=', 'draft')]}"/>
										</group>
									</group>
								</form>
							</page>						</notebook>					<group>						<field name="reason_for_exit" attrs="{'readonly':[('state','!=', 'draft')]}"/>						<field name="notes" attrs="{'readonly':[('state','!=', 'draft')]}"/>					</group>					</sheet>
                    <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>				</form>			</field>		</record>		<record id="exit_request_tree" model="ir.ui.view">			<field name="name">hr.employee.exit.resignation.tree</field>			<field name="model">hr.employee.exit.resignation</field>			<field name="arch" type="xml">				<tree string="hr.employee.exit.resignation Tree">                    <field name="name" attrs="{'readonly':[('state','!=', 'draft')]}"/>                    <field name="request_Date" attrs="{'readonly':[('state','!=', 'draft')]}"/>                    <field name="last_day_of_work" attrs="{'readonly':[('state','!=', 'draft')]}"/>
                    <field name="state" attrs="{'readonly':[('state','!=', 'draft')]}"/>
				</tree>			</field>		</record>		<record id="exit_request_search" model="ir.ui.view">			<field name="name">hr.employee.exit.resignation.search</field>			<field name="model">hr.employee.exit.resignation</field>			<field name="arch" type="xml">				<search string="hr.employee.exit.resignation search">                    <field name="name" filter_domain="['|', '|', ('request_Date', 'ilike', self), ('name', 'ilike', self), ('job_id', 'ilike', self)]" string="Reference"/>
                    <field name="request_Date" string='Date'/>
                    <field name="job_id" string='Position'/>
                    <group expand="0" string="Group By">
                        <filter name="job_id" string="Position" domain="[]" context="{'group_by' : 'job_id'}" />
                    </group>				</search>			</field>		</record>		<record id="action_exit_request_root_view" model="ir.actions.act_window">            <field name="name">Exit Request</field>            <field name="res_model">hr.employee.exit.resignation</field>            <field name="type">ir.actions.act_window</field>            <field name="view_mode">tree,form</field>            <field name="domain">[]</field>            <field name="context">{}</field>            <field name="search_view_id" ref="exit_request_search"/>            <field name="view_id" ref="exit_request_tree"/>            <field name="help" type="html">                <p class="o_view_nocontent_smiling_face">                   hr.employee.exit.resignation root menu action                </p>            </field>        </record>		<record id="action_exit_form" model="ir.actions.act_window">            <field name="name">check_list</field>            <field name="res_model">hr.employee.exit.resignation</field>            <field name="type">ir.actions.act_window</field>            <field name="view_mode">form</field>            <field name="domain">[]</field>            <field name="context">{}</field>            <field name="search_view_id" ref="exit_request_search"/>            <field name="view_id" ref="view_exit_request_form"/>            <field name="help" type="html">                <p class="o_view_nocontent_smiling_face">                   hr.employee.exit.resignation check list action                </p>            </field>        </record>		<record id="view_Check_list_form" model="ir.ui.view">			<field name="name">hr.employee.exit.resignation.checklist.form</field>			<field name="model">hr.employee.exit.resignation.checklist</field>			<field name="arch" type="xml">				<form string="hr.employee.exit.resignation">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="new,confirm,approved"/>
						<button name="action_confirm" type="object" string="Confirm"  class="oe_highlight"
								states="draft"/>
						<button name="action_approved" type="object" string="Approved"  class="oe_highlight"
								states="confirm"
						/>
						
                    </header>					<sheet>						<group>							<group>								<field name="name"  attrs="{'readonly':[('state','!=', 'draft')]}"/>								<field name="user_id"  attrs="{'readonly':[('state','!=', 'draft')]}"/>							</group>							<group>								<field name="Remarks" attrs="{'readonly':[('state','!=', 'draft')]}"/>							</group>
                            <field name="checklist_lines" attrs="{'readonly':[('state','!=', 'draft')]}"/>						</group>					</sheet>				</form>			</field>		</record>	<record id="check_list_tree" model="ir.ui.view">			<field name="name">hr.employee.exit.resignation.checklist.tree</field>			<field name="model">hr.employee.exit.resignation.checklist</field>			<field name="arch" type="xml">				<tree string="hr.employee.exit.resignation Tree">                    <field name="name"  attrs="{'readonly':[('state','!=', 'draft')]}"/>                    <field name="user_id" attrs="{'readonly':[('state','!=', 'draft')]}"/>                    <field name="Remarks" attrs="{'readonly':[('state','!=', 'draft')]}"/>
                    <field name="state" attrs="{'readonly':[('state','!=', 'draft')]}"/>
				</tree>			</field>		</record>	<record id="check_list_search" model="ir.ui.view">			<field name="name">hr.employee.exit.resignation.checklist.search</field>			<field name="model">hr.employee.exit.resignation.checklist</field>			<field name="arch" type="xml">				<search string="Employee  search">                     <field name="name" filter_domain="['|',  ('name', 'ilike', self), ('user_id', 'ilike', self)]" string="Reference"/>
                    <field name="name" string='Checklist'/>
                    <field name="user_id" string='User'/>
                    <group expand="0" string="Group By">
                        <filter name="name" string="Position" domain="[]" context="{'group_by' : 'name'}" />
                    </group>				</search>			</field>		</record>	<record id="action_check_list" model="ir.actions.act_window">            <field name="name">check_list</field>            <field name="res_model">hr.employee.exit.resignation.notebook</field>            <field name="type">ir.actions.act_window</field>            <field name="view_mode">tree,form</field>            <field name="domain">[]</field>            <field name="context">{}</field>            <field name="search_view_id" ref="check_list_search"/>            <field name="view_id" ref="check_list_tree"/>            <field name="help" type="html">                <p class="o_view_nocontent_smiling_face">                   hr.employee.exit.resignation check list action                </p>            </field>        </record>    </data></odoo>